{
  "name": "url-shortener-service",
  "version": "1.0.0",
  "description": "API service for shortening URLs",
  "main": "./src/start.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "test": "npm run test:unit && npm run test:integration",
    "start:prod": "npm run build && node ./.dist/src/start.js",
    "start:dev": "PORT=3000 LOGGER_LEVEL=debug PRETTY_PRINT=true nodemon ./src/start.ts",
    "build": "tsc && npm run assets:copy",
    "assets:copy": "copyfiles -f ./openapi.yaml ./.dist && copyfiles ./package.json .dist"
  },
  "author": "Almog Kusayev",
  "license": "ISC",
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/jest": "^29.4.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "jest": "^29.4.3",
    "jest-environment-node": "^29.4.3",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.3.0",
    "swagger-ui-express": "^4.6.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@databases/sqlite": "^4.0.2",
    "@types/express": "^4.17.17",
    "@types/pg": "^8.6.6",
    "axios": "^1.3.3",
    "convict": "^6.2.4",
    "copyfiles": "^2.4.1",
    "express": "^4.17.17",
    "helmet": "^6.0.1",
    "pg": "^8.9.0",
    "pino": "^8.11.0",
    "yamljs": "^0.3.0",
    "zod": "^3.20.6"
  }
}
